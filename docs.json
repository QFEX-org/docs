{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "QFEX API Documentation",
  "colors": {
    "primary": "#00B8B1",
    "light": "#00B8B1",
    "dark": "#00B8B1"
  },
  "background": {
    "color": {
      "light": "#F9FAFB",
      "dark": "#172027"
    }
  },
  "fonts": {
    "family": "DM Sans"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "FAQ",
        "pages": ["docs/faq/main"]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "API Documentation",
            "pages": [
              "docs/api-reference/introduction",
              "docs/api-reference/enums"
            ]
          },
          {
            "group": "WebSocket",
            "pages": [
              "docs/websocket/main",
              "docs/websocket/trade",
              "docs/websocket/mds",
              {
                "group": "Market Data",
                "pages": [
                  "docs/websocket/channels/mds/refdata",
                  "docs/websocket/channels/mds/orderbook",
                  "docs/websocket/channels/mds/trades",
                  "docs/websocket/channels/mds/bbo",
                  "docs/websocket/channels/mds/underlier",
                  "docs/websocket/channels/mds/funding_rate"
                ]
              },
              {
                "group": "Trade",
                "pages": [
                  "docs/websocket/channels/trade/authenticate",
                  "docs/websocket/channels/trade/add_order",
                  "docs/websocket/channels/trade/cancel_order",
                  "docs/websocket/channels/trade/modify_order",
                  "docs/websocket/channels/trade/cancel_all_orders",
                  "docs/websocket/channels/trade/get_user_orders",
                  "docs/websocket/channels/trade/get_user_trades",
                  "docs/websocket/channels/trade/balance",
                  "docs/websocket/channels/trade/positions",
                  "docs/websocket/channels/trade/get_leverage",
                  "docs/websocket/channels/trade/get_available_leverage",
                  "docs/websocket/channels/trade/set_leverage"
                ]
              }
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Status",
          "href": "https://status.qfex.com",
          "icon": "signal-bars"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg",
    "href": "https://qfex.com"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@qfex.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Trade Now",
      "href": "https://app.qfex.com"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/TradeQFEX",
      "github": "https://github.com/QFEX-org",
      "linkedin": "https://linkedin.com/company/qfex"
    }
  }
}
